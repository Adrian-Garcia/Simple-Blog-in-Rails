<h3>Comments</h3>

<% @post.comments.each do |comment| %>

	<div class="well" style="margin-bottom: -2%;">
		<p><strong><%= comment.username %></strong>: <%= comment.body %>

			<%= link_to "[X]", [comment.post, comment],
									method: :delete,
									data: {confirm: 'Are you shure?'} %></p>
		</div>

<% end %>